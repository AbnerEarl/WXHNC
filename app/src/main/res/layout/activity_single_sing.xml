<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_single_sing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="wxhnc.SingleSing">

    <Button
        android:text="     搜索     "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button45"
        android:background="@drawable/button_shape"
        android:layout_toEndOf="@+id/editText19"
        android:layout_alignBottom="@+id/textView43"
        android:layout_alignTop="@+id/editText19" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/button50"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/lsong"
        android:layout_alignParentBottom="true" />

    <TextView
        android:text="语种"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView56"
        android:layout_below="@+id/editText19"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button46"
        style="@style/ButtonStyle"
        android:singleLine="true"
        android:background="@drawable/joker"
        android:layout_below="@+id/textView56"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp" />

    <TextView
        android:text="搜素歌曲："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:id="@+id/textView43"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="月榜"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button52"
        android:singleLine="true"
        android:layout_alignBaseline="@+id/button51"
        android:layout_alignBottom="@+id/button51"
        android:layout_toEndOf="@+id/button51" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button47"
        style="@style/ButtonStyle"
        android:singleLine="true"
        android:background="@drawable/taylor"
        android:layout_alignBaseline="@+id/button46"
        android:layout_alignBottom="@+id/button46"
        android:layout_toRightOf="@+id/button46"
        android:layout_toEndOf="@+id/button46" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button48"
        style="@style/ButtonStyle"
        android:background="@drawable/eason"
        android:singleLine="true"
        android:layout_alignBaseline="@+id/button47"
        android:layout_alignBottom="@+id/button47"
        android:layout_toEndOf="@+id/button47" />

    <TextView
        android:text="榜单"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView55"
        android:layout_below="@+id/button46"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <Button
        android:text="日榜"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button50"
        android:singleLine="true"
        android:layout_below="@+id/textView55"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:layout_toStartOf="@+id/button47"
        android:layout_toLeftOf="@+id/button47" />

    <Button
        android:text="年榜"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button53"
        android:singleLine="true"
        android:layout_alignBaseline="@+id/button52"
        android:layout_alignBottom="@+id/button52"
        android:layout_toRightOf="@+id/button52"
        android:layout_toEndOf="@+id/button52" />

    <Button
        android:text="周榜"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button51"
        android:singleLine="true"
        android:layout_alignBaseline="@+id/button50"
        android:layout_alignBottom="@+id/button50"
        android:layout_toEndOf="@+id/button50"
        android:layout_toRightOf="@+id/button50" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button49"
        style="@style/ButtonStyle"
        android:background="@drawable/gd"
        android:singleLine="true"
        android:layout_alignBaseline="@+id/button48"
        android:layout_alignBottom="@+id/button48"
        android:layout_toRightOf="@+id/button48"
        android:layout_toEndOf="@+id/button48" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText19"
        android:hint="请输入歌曲名"
        android:layout_alignBaseline="@+id/textView43"
        android:layout_alignBottom="@+id/textView43"
        android:layout_toLeftOf="@+id/button49"
        android:layout_toRightOf="@+id/textView43"
        android:layout_toEndOf="@+id/textView43" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_room_next"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="wxhnc.RoomNext">

    <Button
        android:text="选择"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button36"
        android:background="@android:color/darker_gray"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView36"
        android:layout_marginStart="194dp" />

    <TextView
        android:text="邀请另一半："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView36"
        android:layout_alignBaseline="@+id/button36"
        android:layout_alignBottom="@+id/button36"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="选择歌曲："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="71dp"
        android:id="@+id/textView37"
        android:layout_below="@+id/button36"
        android:layout_alignParentStart="true" />

    <Button
        android:text="开始演唱"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button37"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="搜索歌曲："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView37"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp"
        android:id="@+id/textView39" />

    <TextView
        android:text="双人歌曲推荐："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/textView38"
        android:layout_below="@+id/textView39"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignTop="@+id/textView37"
        android:id="@+id/editText18"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView37" />

    <Button
        android:text="搜索"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button38"
        android:background="@android:color/darker_gray"
        android:layout_alignTop="@+id/editText20"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/editText20" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText20"
        android:layout_alignTop="@+id/textView39"
        android:layout_toEndOf="@+id/textView39" />

</RelativeLayout>
